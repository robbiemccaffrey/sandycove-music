---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Accreditations from '../components/Accreditations.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import LocalBusinessSchema from '../components/LocalBusinessSchema.astro';

const faqs = [
  {
    question: 'How far are you from Dalkey?',
    answer: "We're based in Sandycove, which is the next village over from Dalkey — about a 5-minute drive or a short walk along the coast. Many of our students come from Dalkey and the surrounding area.",
  },
  {
    question: 'Do you teach children and adults from Dalkey?',
    answer: 'Yes — we teach students of all ages, from children aged 5 upwards to adult beginners and returners. A large number of our students are families from Dalkey and Killiney.',
  },
  {
    question: 'How much do piano lessons cost?',
    answer: 'Individual lessons start from €30 for 30 minutes, €40 for 40 minutes, and €50 for a full hour. We also offer discounted packages of 10 lessons. Your first lesson is available at 50% off.',
  },
  {
    question: 'Can you help with Leaving Cert Music?',
    answer: "Absolutely. We have extensive experience preparing students for the Leaving Cert Music performance component. We'll help you choose your pieces, build a balanced programme, and develop the technique and confidence to perform at your best.",
  },
  {
    question: 'Do you offer online lessons?',
    answer: "Yes, we offer online piano lessons via video call. They follow the same structure as in-person sessions, which is convenient if you'd rather not travel.",
  },
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map(({ question, answer }) => ({
    '@type': 'Question',
    name: question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: answer,
    },
  })),
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  serviceType: 'Piano Lessons',
  name: 'Piano Lessons near Dalkey',
  description: 'Professional piano lessons near Dalkey, South Dublin. All ages and levels. Classical, jazz and pop. RIAM, ABRSM, Trinity and Leaving Cert exam preparation.',
  provider: {
    '@type': 'MusicSchool',
    name: 'Sandycove School of Music',
    url: 'https://sandycoveschoolofmusic.com',
    telephone: '+353868729764',
  },
  areaServed: [
    { '@type': 'City', name: 'Dalkey' },
    { '@type': 'City', name: 'Killiney' },
    { '@type': 'City', name: 'Sandycove' },
    { '@type': 'City', name: 'Glasthule' },
    { '@type': 'City', name: 'Dun Laoghaire' },
  ],
  offers: [
    { '@type': 'Offer', name: '30-Minute Piano Lesson', price: '30', priceCurrency: 'EUR' },
    { '@type': 'Offer', name: '40-Minute Piano Lesson', price: '40', priceCurrency: 'EUR' },
    { '@type': 'Offer', name: '1-Hour Piano Lesson', price: '50', priceCurrency: 'EUR' },
  ],
};

const individual = [
  { duration: '30 minutes', price: '€30' },
  { duration: '40 minutes', price: '€40' },
  { duration: '1 hour', price: '€50' },
];

const packages = [
  { sessions: '10 × 30 min', price: '€270', saving: 'Save €30' },
  { sessions: '10 × 40 min', price: '€330', saving: 'Save €70' },
  { sessions: '10 × 1 hour', price: '€400', saving: 'Save €100' },
];
---

<Layout
  title="Piano Lessons Dalkey | From €30 | Sandycove Music"
  description="Piano lessons near Dalkey for children and adults. 5 minutes from Dalkey village. RIAM, ABRSM, Trinity & Leaving Cert prep. Book a free trial."
>
  <Header />
  <main class="flex-1">
    <!-- Hero -->
    <section class="relative pt-16 py-20 bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_40%,_rgba(201,149,46,0.07)_0%,_transparent_60%)]"></div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-16">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6" style="font-family: 'Playfair Display', Georgia, serif;">
          Piano Lessons near Dalkey
        </h1>
        <p class="text-xl sm:text-2xl text-navy-200 max-w-2xl mx-auto mb-8 leading-relaxed">
          Expert piano tuition just minutes from Dalkey village. All ages, all levels — from first-time beginners to advanced exam preparation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-lg shadow-gold-500/25">
            Book a Free Trial
          </a>
          <a href="#pricing" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold border-2 border-white/30 text-white hover:bg-white/10 transition-colors">
            View Pricing
          </a>
        </div>
      </div>
    </section>

    <!-- Intro -->
    <section class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <p class="text-navy-700 text-lg leading-relaxed mb-6">
            If you're looking for piano lessons near Dalkey, Sandycove School of Music is just a 5-minute drive — or a pleasant walk along the coast — from Dalkey village. We offer one-on-one piano tuition for children, teenagers, and adults, with lessons tailored to each student's goals and ability.
          </p>
          <p class="text-navy-700 text-lg leading-relaxed">
            Many of our students come from Dalkey, Killiney, and the surrounding areas. Whether your child is just starting out, you're preparing for grade exams, or you're an adult who's always wanted to learn, we'd love to help. We also offer online lessons if you'd prefer to learn from home.
          </p>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano Lessons for Dalkey Families</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto"></div>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {[
            { title: 'Minutes from Dalkey', desc: 'Our Sandycove studio is the closest music school to Dalkey village. Easy to get to by car, DART, or on foot along the coast.' },
            { title: 'Children from Age 5', desc: 'Fun, patient lessons that build a love of music. Shorter 30-minute sessions for younger children, with longer lessons as they grow.' },
            { title: 'Adult Beginners Welcome', desc: "It's never too late to start. Many of our Dalkey students are adults learning piano for the first time — no pressure, just enjoyment." },
            { title: 'Exam Preparation', desc: 'Thorough preparation for RIAM, ABRSM, Trinity and Leaving Cert Music. Our students consistently achieve high marks.' },
            { title: 'All Styles of Music', desc: 'Classical, jazz, pop, contemporary, film music — learn what you love. We build lessons around your musical interests.' },
            { title: 'Flexible Times', desc: 'Morning, afternoon, evening, and Saturday slots. We work around school schedules, work commitments, and family life.' },
          ].map(({ title, desc }) => (
            <div class="p-6 rounded-2xl bg-white border border-navy-100 hover:border-gold-400 hover:shadow-lg transition-all">
              <h3 class="text-lg font-semibold text-navy-900 mb-2">{title}</h3>
              <p class="text-navy-500 text-sm leading-relaxed">{desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section id="pricing" class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano Lesson Pricing</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
          <p class="text-navy-600 text-lg">Simple, transparent pricing. Save with our 10-lesson packages.</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="rounded-2xl border border-navy-200 bg-white p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-navy-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v10.55A4 4 0 1014 17V7h4V3h-6z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-900">Individual Lessons</h3>
            </div>
            <div class="space-y-4">
              {individual.map(({ duration, price }) => (
                <div class="flex items-center justify-between py-3 border-b border-navy-100 last:border-0">
                  <span class="text-navy-600">{duration}</span>
                  <span class="text-xl font-bold text-navy-900">{price}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="rounded-2xl border-2 border-gold-400 bg-gold-50/50 p-8 shadow-sm relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-gold-500 text-white text-xs font-bold rounded-full uppercase tracking-wider shadow-sm">
              Best Value
            </div>
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-gold-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-gold-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-900">Lesson Packages</h3>
            </div>
            <div class="space-y-4">
              {packages.map(({ sessions, price, saving }) => (
                <div class="flex items-center justify-between py-3 border-b border-gold-200 last:border-0">
                  <div>
                    <span class="text-navy-700 block">{sessions}</span>
                    <span class="text-gold-600 text-xs font-semibold">{saving}</span>
                  </div>
                  <span class="text-xl font-bold text-navy-900">{price}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <p class="text-center text-navy-400 text-sm mt-8">
          All prices are inclusive. First lesson available at 50% off — <a href="/contact" class="text-gold-500 hover:text-gold-600 underline">get in touch</a> to avail.
        </p>
      </div>
    </section>

    <!-- Getting Here from Dalkey -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Getting Here from Dalkey</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
        </div>
        <div class="max-w-3xl mx-auto">
          <p class="text-navy-700 text-lg leading-relaxed mb-6">
            Our studio in Sandycove is one of the closest music schools to Dalkey. Here's how to get to us:
          </p>
          <div class="space-y-4 mb-8">
            {[
              { title: 'By car', desc: 'A 5-minute drive along the coast road. Free on-street parking available near the studio.' },
              { title: 'By DART', desc: 'Sandycove & Glasthule station is a short walk from the studio. One stop from Dalkey station.' },
              { title: 'On foot', desc: 'A lovely 15–20 minute walk along the seafront from Dalkey village through Coliemore and Sandycove.' },
            ].map(({ title, desc }) => (
              <div class="flex items-start gap-4 p-4 rounded-xl bg-white border border-navy-100">
                <div class="w-8 h-8 rounded-lg bg-gold-50 border border-gold-200 flex items-center justify-center shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-gold-500" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-navy-900">{title}</h3>
                  <p class="text-navy-500 text-sm">{desc}</p>
                </div>
              </div>
            ))}
          </div>
          <p class="text-navy-700 text-lg leading-relaxed">
            We also welcome students from Killiney, Ballybrack, and Shankill — all within easy reach of our Sandycove location.
          </p>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 bg-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano Lessons near Dalkey — FAQs</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
        </div>
        <div class="space-y-4">
          {faqs.map(({ question, answer }) => (
            <details class="group rounded-2xl border border-navy-100 bg-navy-50 shadow-sm overflow-hidden">
              <summary class="flex items-center justify-between cursor-pointer px-6 py-5 text-left font-semibold text-navy-900 hover:text-gold-600 transition-colors">
                <span>{question}</span>
                <svg class="w-5 h-5 text-navy-400 group-open:rotate-180 transition-transform shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </summary>
              <div class="px-6 pb-5 text-navy-600 leading-relaxed">
                {answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-navy-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Start Piano Lessons near Dalkey</h2>
        <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
        <p class="text-navy-200 text-lg mb-8 max-w-2xl mx-auto">
          Book a free trial lesson at our Sandycove studio — just 5 minutes from Dalkey village. Children and adults welcome.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-lg shadow-gold-500/25">
            Book a Free Trial
          </a>
          <a href="tel:+353868729764" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold border-2 border-white/30 text-white hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            Call 086 872 9764
          </a>
        </div>
      </div>
    </section>

    <ContactForm />
  </main>
  <Footer />
  <LocalBusinessSchema />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
</Layout>
