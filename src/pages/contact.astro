---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import LocalBusinessSchema from '../components/LocalBusinessSchema.astro';
---

<Layout
  title="Contact & Book a Lesson | Sandycove School of Music"
  description="Get in touch or book a free trial music lesson in Dun Laoghaire. Phone, email & directions. Sandycove School of Music, South Dublin."
>
  <Header />
  <main class="flex-1">
    <!-- Hero -->
    <section class="relative pt-16 py-20 bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_40%,_rgba(201,149,46,0.07)_0%,_transparent_60%)]"></div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-16">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6" style="font-family: 'Playfair Display', Georgia, serif;">
          Contact Us — Book a Lesson
        </h1>
        <p class="text-xl sm:text-2xl text-navy-200 max-w-2xl mx-auto leading-relaxed">
          Ready to start your musical journey? Get in touch by phone, email, or the form below.
        </p>
      </div>
    </section>

    <!-- Contact Info -->
    <section class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-4xl mx-auto mb-16">
          <!-- Phone -->
          <div class="text-center p-6 rounded-2xl bg-navy-50 border border-navy-100">
            <div class="w-12 h-12 rounded-xl bg-gold-50 border border-gold-200 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            </div>
            <h3 class="font-semibold text-navy-900 mb-2">Phone</h3>
            <a href="tel:+353868729764" class="text-gold-600 hover:text-gold-700 font-medium transition-colors text-lg">
              086 872 9764
            </a>
          </div>

          <!-- Email -->
          <div class="text-center p-6 rounded-2xl bg-navy-50 border border-navy-100">
            <div class="w-12 h-12 rounded-xl bg-gold-50 border border-gold-200 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            </div>
            <h3 class="font-semibold text-navy-900 mb-2">Email</h3>
            <a href="mailto:info@sandycoveschoolofmusic.com" class="text-gold-600 hover:text-gold-700 font-medium transition-colors text-lg break-all">
              info@sandycove<wbr />schoolofmusic.com
            </a>
          </div>

          <!-- Location -->
          <div class="text-center p-6 rounded-2xl bg-navy-50 border border-navy-100 sm:col-span-2 lg:col-span-1">
            <div class="w-12 h-12 rounded-xl bg-gold-50 border border-gold-200 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-navy-900 mb-2">Location</h3>
            <p class="text-navy-600">Sandycove, Dun Laoghaire<br />Co. Dublin</p>
          </div>
        </div>

        <!-- Map -->
        <div class="max-w-4xl mx-auto mb-16">
          <div class="rounded-2xl overflow-hidden border border-navy-200 shadow-sm">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d9543.43!2d-6.1341!3d53.2945!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4867094c26b0e2b7%3A0xa00c7a997316060!2sSandycove%2C%20Co.%20Dublin!5e0!3m2!1sen!2sie!4v1700000000000"
              width="100%"
              height="400"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Sandycove School of Music location — Sandycove, Dun Laoghaire, Co. Dublin"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <ContactForm />
  </main>
  <Footer />
  <LocalBusinessSchema />
</Layout>
