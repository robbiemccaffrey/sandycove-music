---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Accreditations from '../components/Accreditations.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import LocalBusinessSchema from '../components/LocalBusinessSchema.astro';

const pianoFaqs = [
  {
    question: 'How much do piano lessons cost?',
    answer: 'Individual lessons start from €30 for 30 minutes, €40 for 40 minutes, and €50 for a full hour. We also offer discounted packages of 10 lessons. Your first lesson is available at 50% off.',
  },
  {
    question: 'What age can you start piano lessons?',
    answer: 'We accept students from age 5 upwards. Younger children benefit from shorter 30-minute lessons focusing on building a love of music through fun, age-appropriate exercises. There is no upper age limit — many of our students are adults.',
  },
  {
    question: 'Do I need my own piano at home?',
    answer: "You'll need access to a piano or keyboard for practice between lessons. A full-size digital piano with weighted keys is a great starting point if you're not ready to invest in an acoustic piano. We can advise on the best options for your budget.",
  },
  {
    question: 'Which exam boards do you prepare for?',
    answer: 'We prepare students for RIAM (Royal Irish Academy of Music), ABRSM (Associated Board of the Royal Schools of Music), Trinity College London, and the Leaving Certificate Music performance exam.',
  },
  {
    question: 'Do you offer online piano lessons?',
    answer: "Yes, we offer high-quality online piano lessons via video call. Online lessons follow the same structure and standard as our in-person sessions, making them a great option if you can't travel to our studio in Dun Laoghaire.",
  },
  {
    question: 'How long does it take to reach Grade 5?',
    answer: 'With regular practice and weekly lessons, most students reach Grade 5 in around 3 to 4 years. Some progress faster depending on age, prior experience, and practice time.',
  },
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: pianoFaqs.map(({ question, answer }) => ({
    '@type': 'Question',
    name: question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: answer,
    },
  })),
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  serviceType: 'Piano Lessons',
  name: 'Piano Lessons in Dublin',
  description: 'Expert piano lessons in Dun Laoghaire for all ages and levels. Classical, jazz and pop styles. RIAM, ABRSM, Trinity and Leaving Cert exam preparation.',
  provider: {
    '@type': 'MusicSchool',
    name: 'Sandycove School of Music',
    url: 'https://sandycoveschoolofmusic.com',
    telephone: '+353868729764',
  },
  areaServed: [
    { '@type': 'City', name: 'Dublin' },
    { '@type': 'City', name: 'Dun Laoghaire' },
    { '@type': 'City', name: 'Sandycove' },
    { '@type': 'City', name: 'Dalkey' },
    { '@type': 'City', name: 'Glasthule' },
    { '@type': 'City', name: 'Blackrock' },
  ],
  offers: [
    {
      '@type': 'Offer',
      name: '30-Minute Piano Lesson',
      price: '30',
      priceCurrency: 'EUR',
    },
    {
      '@type': 'Offer',
      name: '40-Minute Piano Lesson',
      price: '40',
      priceCurrency: 'EUR',
    },
    {
      '@type': 'Offer',
      name: '1-Hour Piano Lesson',
      price: '50',
      priceCurrency: 'EUR',
    },
  ],
};

const individual = [
  { duration: '30 minutes', price: '€30' },
  { duration: '40 minutes', price: '€40' },
  { duration: '1 hour', price: '€50' },
];

const packages = [
  { sessions: '10 × 30 min', price: '€270', saving: 'Save €30' },
  { sessions: '10 × 40 min', price: '€330', saving: 'Save €70' },
  { sessions: '10 × 1 hour', price: '€400', saving: 'Save €100' },
];
---

<Layout
  title="Piano Lessons Dublin & Dun Laoghaire | From €30 | Sandycove Music"
  description="Expert piano lessons in Dun Laoghaire, South Dublin for all ages & levels. Classical, jazz & pop. RIAM, ABRSM, Trinity & Leaving Cert prep. Free trial available."
>
  <Header />
  <main class="flex-1">
    <!-- Hero -->
    <section class="relative pt-16 py-20 bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_40%,_rgba(201,149,46,0.07)_0%,_transparent_60%)]"></div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-16">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6" style="font-family: 'Playfair Display', Georgia, serif;">
          Piano Lessons in Dublin
        </h1>
        <p class="text-xl sm:text-2xl text-navy-200 max-w-2xl mx-auto mb-8 leading-relaxed">
          Expert tuition for all ages and levels in Dun Laoghaire, South Dublin. Classical, jazz and pop — from complete beginners to advanced exam preparation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-lg shadow-gold-500/25">
            Book a Free Trial
          </a>
          <a href="#pricing" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold border-2 border-white/30 text-white hover:bg-white/10 transition-colors">
            View Pricing
          </a>
        </div>
      </div>
    </section>

    <!-- Intro -->
    <section class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <p class="text-navy-700 text-lg leading-relaxed mb-6">
            At Sandycove School of Music, we offer tailored piano lessons for students of all ages and abilities. Whether you're picking up the piano for the first time or preparing for your next grade exam, our experienced teachers will build a personalised programme around your goals.
          </p>
          <p class="text-navy-700 text-lg leading-relaxed">
            Based in the heart of Dun Laoghaire, we welcome students from across South Dublin — including Sandycove, Dalkey, Glasthule, Monkstown, Blackrock, and Killiney. Lessons are available in-person at our studio or online via video call.
          </p>
        </div>
      </div>
    </section>

    <!-- What You'll Learn -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">What You'll Learn</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto"></div>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {[
            { title: 'Technique & Posture', desc: 'Correct hand position, fingering, pedalling, and posture — the foundation of confident playing.' },
            { title: 'Sight Reading', desc: 'Learn to read music fluently, a skill that opens up a lifetime of playing any piece you choose.' },
            { title: 'Music Theory', desc: 'Understand the building blocks of music — scales, chords, key signatures, and harmony.' },
            { title: 'Repertoire', desc: 'Build a diverse repertoire across classical, jazz, pop, and contemporary styles.' },
            { title: 'Ear Training', desc: 'Develop your musical ear — recognise intervals, chords, and melodies by sound.' },
            { title: 'Performance Skills', desc: 'Build confidence performing for exams, recitals, and simply for your own enjoyment.' },
          ].map(({ title, desc }) => (
            <div class="p-6 rounded-2xl bg-white border border-navy-100 hover:border-gold-400 hover:shadow-lg transition-all">
              <h3 class="text-lg font-semibold text-navy-900 mb-2">{title}</h3>
              <p class="text-navy-500 text-sm leading-relaxed">{desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Lesson Formats & Pricing -->
    <section id="pricing" class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Lesson Formats & Pricing</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
          <p class="text-navy-600 text-lg">Straightforward pricing with no hidden fees. Save with our lesson packages.</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="rounded-2xl border border-navy-200 bg-white p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-navy-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v10.55A4 4 0 1014 17V7h4V3h-6z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-900">Individual Lessons</h3>
            </div>
            <div class="space-y-4">
              {individual.map(({ duration, price }) => (
                <div class="flex items-center justify-between py-3 border-b border-navy-100 last:border-0">
                  <span class="text-navy-600">{duration}</span>
                  <span class="text-xl font-bold text-navy-900">{price}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="rounded-2xl border-2 border-gold-400 bg-gold-50/50 p-8 shadow-sm relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-gold-500 text-white text-xs font-bold rounded-full uppercase tracking-wider shadow-sm">
              Best Value
            </div>
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-gold-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-gold-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-900">Lesson Packages</h3>
            </div>
            <div class="space-y-4">
              {packages.map(({ sessions, price, saving }) => (
                <div class="flex items-center justify-between py-3 border-b border-gold-200 last:border-0">
                  <div>
                    <span class="text-navy-700 block">{sessions}</span>
                    <span class="text-gold-600 text-xs font-semibold">{saving}</span>
                  </div>
                  <span class="text-xl font-bold text-navy-900">{price}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <p class="text-center text-navy-400 text-sm mt-8">
          All prices are inclusive. First lesson available at 50% off — <a href="/contact" class="text-gold-500 hover:text-gold-600 underline">get in touch</a> to avail.
        </p>
      </div>
    </section>

    <!-- Exam Preparation -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Exam Preparation</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
          <p class="text-navy-600 text-lg">Structured preparation for all major exam boards, from beginner grades through to diploma level.</p>
        </div>
        <Accreditations />
        <div class="max-w-3xl mx-auto mt-12">
          <p class="text-navy-700 leading-relaxed mb-6">
            We have extensive experience preparing students for examinations with all the major boards. Our students consistently achieve high marks across RIAM, ABRSM, and Trinity College London exams. We also prepare Leaving Certificate students for the Music performance component.
          </p>
          <p class="text-navy-700 leading-relaxed">
            Exam preparation covers all required elements — set pieces, scales, sight reading, aural tests, and music theory. We'll create a structured study plan tailored to your exam date and current level.
          </p>
        </div>
      </div>
    </section>

    <!-- Piano for Adults -->
    <section class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano Lessons for Adults</h2>
            <div class="w-16 h-1 bg-gold-500 mb-6"></div>
            <p class="text-navy-700 leading-relaxed mb-6">
              It's never too late to learn piano. Many of our adult students are complete beginners who've always wanted to play, while others are returning to the piano after years away. Whatever your starting point, we'll meet you there.
            </p>
            <p class="text-navy-700 leading-relaxed mb-6">
              Adult lessons are relaxed and focused on what you want to achieve — whether that's playing your favourite songs, working through the grades, or simply enjoying the mental and creative benefits of making music.
            </p>
            <a href="/contact" class="inline-flex items-center gap-2 text-gold-600 hover:text-gold-700 font-semibold transition-colors">
              Book your first lesson
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
          <div class="space-y-4">
            {[
              { title: 'Flexible Scheduling', desc: 'Evening and weekend slots available to fit around work commitments.' },
              { title: 'No Pressure', desc: 'Learn at your own pace — exams are optional, enjoyment is guaranteed.' },
              { title: 'Choose Your Style', desc: 'Classical, jazz, pop — focus on the music you love.' },
            ].map(({ title, desc }) => (
              <div class="flex items-start gap-4 p-4 rounded-xl bg-navy-50 border border-navy-100">
                <div class="w-8 h-8 rounded-lg bg-gold-50 border border-gold-200 flex items-center justify-center shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-gold-500" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-navy-900">{title}</h3>
                  <p class="text-navy-500 text-sm">{desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Piano for Children -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano for Children</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
          <p class="text-navy-600 text-lg">Fun, structured lessons that build confidence and a lifelong love of music.</p>
        </div>
        <div class="max-w-3xl mx-auto">
          <p class="text-navy-700 leading-relaxed mb-6">
            We welcome children from age 5 upwards. Younger students start with shorter 30-minute lessons, where the focus is on making music fun while building core skills. As they progress, lessons can be extended to 40 minutes or a full hour.
          </p>
          <p class="text-navy-700 leading-relaxed mb-8">
            Our patient, encouraging approach helps children develop discipline, concentration, and self-expression — skills that benefit them far beyond the piano.
          </p>
          <div class="text-center">
            <a href="/kids-music-lessons" class="inline-flex items-center gap-2 text-gold-600 hover:text-gold-700 font-semibold transition-colors">
              Learn more about kids' music lessons
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Areas We Serve -->
    <section class="py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Areas We Serve</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
          <p class="text-navy-600 text-lg">Based in Sandycove, we welcome piano students from across South Dublin and beyond.</p>
        </div>
        <div class="max-w-3xl mx-auto">
          <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 mb-8">
            {['Dun Laoghaire', 'Dalkey', 'Glasthule', 'Monkstown', 'Blackrock', 'Killiney', 'Booterstown', 'Stillorgan', 'Foxrock'].map((area) => (
              <a href={area === 'Dun Laoghaire' ? '/piano-lessons-dun-laoghaire' : area === 'Dalkey' ? '/piano-lessons-dalkey' : '/piano-lessons-dublin'} class="flex items-center gap-3 p-3 rounded-xl bg-navy-50 border border-navy-100 hover:border-gold-400 hover:shadow-sm transition-all">
                <svg class="w-5 h-5 text-gold-500 shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
                <span class="text-navy-700 font-medium">{area}</span>
              </a>
            ))}
          </div>
          <p class="text-navy-700 text-lg leading-relaxed text-center">
            Can't make it to the studio? Our <strong>online piano lessons</strong> are available to students anywhere in Ireland.
          </p>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 bg-navy-50">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Piano Lesson FAQs</h2>
          <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
        </div>
        <div class="space-y-4">
          {pianoFaqs.map(({ question, answer }) => (
            <details class="group rounded-2xl border border-navy-100 bg-navy-50 shadow-sm overflow-hidden">
              <summary class="flex items-center justify-between cursor-pointer px-6 py-5 text-left font-semibold text-navy-900 hover:text-gold-600 transition-colors">
                <span>{question}</span>
                <svg class="w-5 h-5 text-navy-400 group-open:rotate-180 transition-transform shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </summary>
              <div class="px-6 pb-5 text-navy-600 leading-relaxed">
                {answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-navy-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4" style="font-family: 'Playfair Display', Georgia, serif;">Ready to Start Playing?</h2>
        <div class="w-16 h-1 bg-gold-500 mx-auto mb-6"></div>
        <p class="text-navy-200 text-lg mb-8 max-w-2xl mx-auto">
          Book a free trial lesson and discover what personalised piano tuition can do for you. All ages, all levels — we'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-lg shadow-gold-500/25">
            Book a Free Trial
          </a>
          <a href="tel:+353868729764" class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold border-2 border-white/30 text-white hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            Call 086 872 9764
          </a>
        </div>
      </div>
    </section>

    <ContactForm />
  </main>
  <Footer />
  <LocalBusinessSchema />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
</Layout>
