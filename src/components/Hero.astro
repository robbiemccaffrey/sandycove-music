---

<section class="relative pt-16 min-h-[85vh] flex items-center overflow-hidden">
  <!-- Base gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900"></div>

  <!-- Warm gold radial glows for depth -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_40%,_rgba(201,149,46,0.07)_0%,_transparent_60%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_80%_20%,_rgba(201,149,46,0.04)_0%,_transparent_40%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_20%_70%,_rgba(201,149,46,0.03)_0%,_transparent_40%)]"></div>

  <!-- Flowing music staff lines and notes -->
  <div class="absolute inset-0">
    <svg class="w-full h-full" viewBox="0 0 1400 800" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">

      <!-- Upper staff — five flowing lines -->
      <g opacity="0.06">
        <path d="M-100 180 Q200 160 500 185 Q800 210 1100 178 Q1300 160 1500 180" stroke="white" stroke-width="1"/>
        <path d="M-100 195 Q200 175 500 200 Q800 225 1100 193 Q1300 175 1500 195" stroke="white" stroke-width="1"/>
        <path d="M-100 210 Q200 190 500 215 Q800 240 1100 208 Q1300 190 1500 210" stroke="white" stroke-width="1"/>
        <path d="M-100 225 Q200 205 500 230 Q800 255 1100 223 Q1300 205 1500 225" stroke="white" stroke-width="1"/>
        <path d="M-100 240 Q200 220 500 245 Q800 270 1100 238 Q1300 220 1500 240" stroke="white" stroke-width="1"/>
      </g>

      <!-- Notes on upper staff -->
      <g opacity="0.08" fill="white">
        <!-- Quarter note -->
        <ellipse cx="180" cy="193" rx="7" ry="5" transform="rotate(-8 180 193)"/>
        <rect x="186" y="158" width="1.5" height="35"/>

        <!-- Half note -->
        <ellipse cx="340" cy="212" rx="7" ry="5" fill="none" stroke="white" stroke-width="1.5" transform="rotate(-6 340 212)"/>
        <rect x="346" y="177" width="1.5" height="35"/>

        <!-- Eighth note pair (beamed) -->
        <ellipse cx="520" cy="200" rx="6.5" ry="4.5" transform="rotate(-4 520 200)"/>
        <rect x="526" y="165" width="1.5" height="35"/>
        <ellipse cx="560" cy="210" rx="6.5" ry="4.5" transform="rotate(-3 560 210)"/>
        <rect x="566" y="175" width="1.5" height="35"/>
        <path d="M527.5 165 Q547 158 567.5 175" stroke="white" stroke-width="2.5" fill="none"/>

        <!-- Quarter note -->
        <ellipse cx="730" cy="225" rx="7" ry="5" transform="rotate(-2 730 225)"/>
        <rect x="736" y="190" width="1.5" height="35"/>

        <!-- Whole note -->
        <ellipse cx="920" cy="198" rx="8.5" ry="5.5" fill="none" stroke="white" stroke-width="1.5" transform="rotate(0 920 198)"/>

        <!-- Quarter note -->
        <ellipse cx="1100" cy="210" rx="7" ry="5" transform="rotate(2 1100 210)"/>
        <rect x="1106" y="175" width="1.5" height="35"/>

        <!-- Half note -->
        <ellipse cx="1280" cy="190" rx="7" ry="5" fill="none" stroke="white" stroke-width="1.5" transform="rotate(3 1280 190)"/>
        <rect x="1286" y="155" width="1.5" height="35"/>
      </g>

      <!-- Lower staff — five flowing lines -->
      <g opacity="0.04">
        <path d="M-100 550 Q250 570 600 545 Q950 520 1300 555 Q1450 565 1500 550" stroke="white" stroke-width="1"/>
        <path d="M-100 565 Q250 585 600 560 Q950 535 1300 570 Q1450 580 1500 565" stroke="white" stroke-width="1"/>
        <path d="M-100 580 Q250 600 600 575 Q950 550 1300 585 Q1450 595 1500 580" stroke="white" stroke-width="1"/>
        <path d="M-100 595 Q250 615 600 590 Q950 565 1300 600 Q1450 610 1500 595" stroke="white" stroke-width="1"/>
        <path d="M-100 610 Q250 630 600 605 Q950 580 1300 615 Q1450 625 1500 610" stroke="white" stroke-width="1"/>
      </g>

      <!-- Notes on lower staff -->
      <g opacity="0.05" fill="white">
        <ellipse cx="300" cy="570" rx="6" ry="4.5" transform="rotate(-5 300 570)"/>
        <rect x="306" y="540" width="1.2" height="30"/>

        <ellipse cx="650" cy="555" rx="6" ry="4.5" transform="rotate(0 650 555)"/>
        <rect x="656" y="525" width="1.2" height="30"/>

        <ellipse cx="1000" cy="580" rx="7" ry="5" fill="none" stroke="white" stroke-width="1.2" transform="rotate(3 1000 580)"/>
        <rect x="1007" y="550" width="1.2" height="30"/>
      </g>

      <!-- Decorative arcs — large sweeping curves -->
      <g opacity="0.025" stroke="white" stroke-width="1" fill="none">
        <path d="M-200 400 Q400 300 800 400 Q1200 500 1600 400"/>
        <path d="M-200 420 Q400 320 800 420 Q1200 520 1600 420"/>
      </g>
    </svg>
  </div>

  <!-- Floating gold particles -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="hero-dot" style="top:10%;left:7%;--size:4px;animation-delay:0s"></div>
    <div class="hero-dot" style="top:22%;right:11%;--size:3px;animation-delay:2.2s"></div>
    <div class="hero-dot" style="top:50%;left:14%;--size:5px;animation-delay:1.1s"></div>
    <div class="hero-dot" style="top:68%;right:18%;--size:3px;animation-delay:3.4s"></div>
    <div class="hero-dot" style="top:33%;left:78%;--size:4px;animation-delay:0.6s"></div>
    <div class="hero-dot" style="top:78%;left:52%;--size:3px;animation-delay:4.2s"></div>
    <div class="hero-dot" style="top:42%;left:32%;--size:3px;animation-delay:2.8s"></div>
    <div class="hero-dot" style="top:88%;right:32%;--size:4px;animation-delay:1.6s"></div>
    <div class="hero-dot" style="top:15%;left:45%;--size:3px;animation-delay:3.8s"></div>
    <div class="hero-dot" style="top:60%;right:8%;--size:4px;animation-delay:0.3s"></div>
  </div>

  <!-- Piano keys at bottom with gradient fade -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="h-32 bg-gradient-to-t from-white/[0.05] to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 h-20 opacity-[0.15]">
      <img src="/images/piano-keys.svg" alt="" class="w-full h-full object-cover object-top" aria-hidden="true" />
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
    <div class="inline-flex items-center gap-2 mb-8 px-5 py-2.5 rounded-full bg-gold-500/20 border border-gold-400/40">
      <svg class="w-5 h-5 text-gold-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 3v10.55A4 4 0 1014 17V7h4V3h-6z"/>
      </svg>
      <span class="text-gold-200 font-semibold text-sm sm:text-base">Get 50% off your first lesson</span>
    </div>
    <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-white leading-tight mb-6" style="font-family: 'Playfair Display', Georgia, serif;">
      Sandycove School<br />of Music
    </h1>
    <p class="text-xl sm:text-2xl text-navy-200 max-w-2xl mx-auto mb-10 leading-relaxed">
      Tailored, effective tutoring to help you reach your potential.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#contact"
        class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-lg shadow-gold-500/25"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Book a Lesson
      </a>
      <a
        href="#lessons"
        class="inline-flex items-center justify-center gap-2 px-8 py-3.5 rounded-full text-lg font-semibold border-2 border-white/30 text-white hover:bg-white/10 transition-colors"
      >
        Learn More
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hero-dot {
    position: absolute;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    background: rgba(201, 149, 46, 0.4);
    box-shadow: 0 0 8px 2px rgba(201, 149, 46, 0.15);
    animation: hero-float 8s ease-in-out infinite;
  }
  @keyframes hero-float {
    0%, 100% { transform: translateY(0) scale(1); opacity: 0.25; }
    50% { transform: translateY(-22px) scale(1.3); opacity: 0.6; }
  }
</style>
