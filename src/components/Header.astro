---
const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/piano-lessons', label: 'Piano Lessons' },
  { href: '/#pricing', label: 'Pricing' },
  { href: '/blog', label: 'Blog' },
  { href: '/sheet-music', label: 'Sheet Music' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-md border-b border-navy-100 shadow-sm">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between" aria-label="Main navigation">
    <a href="/" class="flex items-center gap-2 font-semibold text-lg text-navy-900 hover:text-gold-500 transition-colors">
      <!-- Music note icon -->
      <svg class="w-7 h-7 text-gold-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55C7.79 13 6 14.79 6 17s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
      </svg>
      <span>Sandycove School of Music</span>
    </a>

    <div class="hidden md:flex items-center gap-1">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class="px-3 py-2 rounded-md text-sm font-medium text-navy-600 hover:text-navy-900 hover:bg-navy-50 transition-colors"
        >
          {label}
        </a>
      ))}
      <a
        href="#contact"
        class="ml-3 px-5 py-2 rounded-full text-sm font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors shadow-sm whitespace-nowrap"
      >
        Book a Lesson
      </a>
    </div>

    <button
      id="menu-toggle"
      class="md:hidden p-2 rounded-md text-navy-600 hover:bg-navy-50 transition-colors"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg id="icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-navy-100 bg-white" role="navigation" aria-label="Mobile navigation">
    <div class="px-4 py-3 space-y-1">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class="block px-3 py-2 rounded-md text-sm font-medium text-navy-600 hover:text-navy-900 hover:bg-navy-50 transition-colors"
        >
          {label}
        </a>
      ))}
      <a
        href="tel:+353868729764"
        class="flex items-center gap-2 px-3 py-2 rounded-md text-sm font-medium text-navy-600 hover:text-navy-900 hover:bg-navy-50 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
        086 872 9764
      </a>
      <a
        href="#contact"
        class="block px-3 py-2 rounded-full text-sm font-semibold bg-gold-500 text-white hover:bg-gold-600 transition-colors text-center mt-2"
      >
        Book a Lesson
      </a>
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('menu-toggle')!;
  const menu = document.getElementById('mobile-menu')!;
  const iconOpen = document.getElementById('icon-open')!;
  const iconClose = document.getElementById('icon-close')!;

  toggle.addEventListener('click', () => {
    const isOpen = !menu.classList.contains('hidden');
    menu.classList.toggle('hidden', isOpen);
    iconOpen.classList.toggle('hidden', !isOpen);
    iconClose.classList.toggle('hidden', isOpen);
    toggle.setAttribute('aria-expanded', String(!isOpen));
  });

  menu.querySelectorAll('a').forEach(a =>
    a.addEventListener('click', () => {
      menu.classList.add('hidden');
      iconOpen.classList.remove('hidden');
      iconClose.classList.add('hidden');
      toggle.setAttribute('aria-expanded', 'false');
    })
  );
</script>
